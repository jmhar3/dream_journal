<!DOCTYPE html>
<html>
  <head>
    <title>DreamJournal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="nav-expand">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-menu" aria-controls="nav-menu" aria-expanded="true" aria-label="Toggle navigation">â˜°</button>
      <button type="button" ><%= yield :menu_icon %></button>
      <div class="navbar-collapse collapse show" id="nav_menu" style="">
        <ul>
          <li>
            <%= link_to "Dream Journal", root_path %>
          </li>
          <hr class="rounded">
          <li>
            <%= link_to "Daily", root_path %>
          </li>
          <li>
            <%= link_to "Monthly", root_path %>
          </li>
          <li>
            <%= link_to "Friends", root_path %>
          </li>
          <li>
            <div>
              <%= link_to "Sign Out", root_path %>
            </div>
          </li>
        </ul>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
