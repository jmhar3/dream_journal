<div class="container mid column-container column dark">
    <div class="row">
        <div class="split-column">
            <h2><%= link_to "Finances", new_finance_path,  class: "red" %></h2>
            <h5>$<%= total %></h5>
        </div>
        <div class="quarter-column">
            <h5>in</h5>
            <p>$<%= earnings %></p>
        </div>
        <div class="quarter-column">
            <h5>out</h5>
            <p>$<%= expenses %></p>
        </div>
    </div>
    <% if finance_progress %>
        <div class="progress-bar">
            <div class="progress" style="height: 12px;width: <%= finance_progress %>%"></div>
        </div>
    <% else %>
        <%= form_for :finance, url: finances_path do |f| %>
            <div class="row fit-content emoji-form">
                <%= f.select :flow, options_for_status, {}, prompt: 'Select One' %>

                <h2>$</h2><%= f.text_field :amount, placeholder: "0", class: "amount"%>

                <%= f.submit '🏹' %>
            </div>
        <% end %>
    <% end %>
</div>