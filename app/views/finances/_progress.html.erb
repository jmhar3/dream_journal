<div class="container mid column-container column dark">
    <div class="row">
        <div class="split-column">
            <h2><%= link_to "Finances", new_finance_path,  class: "red" %></h2>
            <h5>$<%= total %></h5>
        </div>
        <div class="quarter-column">
            <h5>in</h5>
            <p>$<%= earnings %></p>
        </div>
        <div class="quarter-column">
            <h5>out</h5>
            <p>$<%= expenses %></p>
        </div>
    </div>
    <div class="progress-bar">
        <div class="progress" style="height: 12px;width: <%= finance_progress %>%"></div>
    </div>
</div>