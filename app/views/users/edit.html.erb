<div class="row account-row">
    <div class="container account-column mid">
        <h1>Update Details</h1>

        <%= form_for :user, url: edit_user_path do |f| %>
            <div>
                <%= f.text_field :username %>
            </div>

            <div>
                <%= f.text_field :email %>
            </div>

            <div>
                <%= f.submit 'Save', data: { confirm: 'Are you sure?' }, class: "submit button light" %>
            </div>
        <% end %>
    </div>

    <hr class="hr-column">

    <%= render 'passwords/edit' %>
</div>