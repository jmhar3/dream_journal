<div class="row account-row">
    <div class="container account-column mid">
        <h1>Update Details</h1>

        <%= form_for :user, url: user_path, method: :put  do |f| %>
            <div>
                <%= f.text_field :username %>
            </div>

            <div>
                <%= f.text_field :email %>
            </div>

            <div>
                <%= f.submit 'Save', class: "button" %>
            </div>
        <% end %>
    </div>

    <hr class="hr-column">

    <%= render 'passwords/edit' %>
</div>