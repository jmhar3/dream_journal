<% menu_icon "Dream Journal" %>
<%= link_to "Sign Out", sign_out_path, method: :delete, class: 'corner-button' %>

<div class="row account-row">
    <div class="container account-column mid">
        <h2>Account Info</h2>
        <h5>Username: <%= @user.username %></h5>
        <h5>Email: <%= @user.email %></h5>
        <div class="light">
            <%= link_to "Change Password", edit_password_path, class: "button light" %>
        </div>
    </div>

    <hr class="hr-column">

    <div class="container account-column mid">
        <h2>Friends</h2>
        <ul>
            <% if @invites.length > 0 %>
                <%= @invites.each do |invite| %>
                    <li><%= invite.name %></li>
                <% end %>
            <% end %>
            <% if @friends.length > 0 %>
                <%= @friends.each do |friend| %>
                    <li><%= friend.name %></li>
                <% end %>
            <% else %>
                <li>You have no friends.</li>
            <% end %>
        </ul>
        <div>
            <%= link_to "Add Friend", add_friend_path, class: "button light" %>
        </div>
    </div>
</div>