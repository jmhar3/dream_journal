<% menu_icon "+" %>
<% tracker_title current_month %>

<div class="row red columns">
    <div class="column">
        <h2>Priorities</h2>
        <h2>Goals</h2>
    </div>
    <div class="column">
        <div class="container mid">
            <h2>I'm Grateful For</h2>
            <% if @gratitudes != nil %>
                <ul>
                    <% @gratitudes.each do |gratitude| %>
                        <li><%= gratitude.name %></li>
                    <% end %>
                </ul>
            <% end %>
            <%= link_to "Add Gratitude", new_gratitude_path, class: "button light" %>
        </div>
        <h2>Self Care</h2>
        <div class="container mid column-container column dark">
            <div class="row space-between">
                <h2><%= link_to "Finances", new_finance_path,  class: "red" %></h2>
                <div class="row">
                    <h5>in</h5>
                    <h5>out</h5>
                </div>
            </div>
            <div class="row space-between">
                <h5><%= total %></h5>
                <div class="row">
                    <p><%= earnings %></p>
                    <p><%= expenses %></p>
                </div>
            </div>
            <div class="progress-bar">
                <div class="progress" style="height:9px;width:<%= finance_progress %>%"></div>
            </div>
        </div>
    </div>
    <div class="column">
        <h2>Notes</h2>
    </div>
</div>