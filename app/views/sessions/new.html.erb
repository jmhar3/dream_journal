<div class="row login-row">
    <div class="container login-column mid">
        <h1 class="red">Sign In</h1>

        <%= form_with url: login_path do |f| %>
            <div>
                <%= f.text_field :username, id: 'username', placeholder: "Username" %>
            </div>

            <div>
                <%= f.password_field :password, id: 'password', placeholder: "Password" %>
            </div>
            
            <div>
                <%= f.submit 'Log In', class: 'submit button light' %>
            </div>
        <% end %>
    </div>

    <hr class="hr-column">

    <div class="container login-column mid">
        <h1 class="red">Sign Up</h1>

        <%= form_for :user, url: new_user_path do |f| %>
            <div>
                <%= f.text_field :username, placeholder: "Username" %>
            </div>

            <div>
                <%= f.text_field :email, placeholder: "Email" %>
            </div>
            
            <div>
                <%= f.password_field :password, placeholder: "Password" %>
            </div>

            <div>
                <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
            </div>
            
            <div>
                <%= f.submit 'Sign Up', class: "submit button light" %>
            </div>
        <% end %>
    </div>
</div>